<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorFree" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyStyleCalculator" parent="Theme.CalculatorFree">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DarkTheme" parent="Theme.CalculatorFree">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/black</item>
    </style>

    <style name="VanGoghTheme" parent="Theme.CalculatorFree">
        <item name="android:textColor">@color/purple_200</item>
        <item name="android:background">@drawable/vangoghflowers</item>
    </style>

</resources>